datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  posts     Post[]    @relation("Post_author")
  createdAt DateTime? @default(now())
}

model Post {
  id       String  @id @default(cuid())
  title    String  @default("")
  content  String  @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  author   User?   @relation("Post_author", fields: [authorId], references: [id])
  authorId String? @map("author")
  tags     Tag[]   @relation("Post_tags")

  @@index([authorId])
}

model Tag {
  id    String @id @default(cuid())
  name  String @default("")
  posts Post[] @relation("Post_tags")
}

model Definicja {
  id                    String   @id @default(cuid())
  opis                  String   @default("")
  poziom                Int?
  negatywna             Boolean  @default(false)
  aspekt                Aspekt?  @relation("Definicja_aspekt", fields: [aspektId], references: [id])
  aspektId              String?  @map("aspekt")
  from_Aspekt_definicje Aspekt[] @relation("Aspekt_definicje")

  @@index([aspektId])
}

model Aspekt {
  id                      String       @id @default(cuid())
  nazwa                   String       @default("")
  definicje               Definicja[]  @relation("Aspekt_definicje")
  from_Definicja_aspekt   Definicja[]  @relation("Definicja_aspekt")
  from_Kompetecja_aspekty Kompetecja[] @relation("Kompetecja_aspekty")
}

model Kompetecja {
  id       String   @id @default(cuid())
  nazwa    String   @default("")
  metodyka String?  @default("N/A")
  aspekty  Aspekt[] @relation("Kompetecja_aspekty")
}
