datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  createdAt DateTime? @default(now())
}

model Definicja {
  id           String                 @id @default(cuid())
  opis         String                 @default("")
  poziom       Int
  negatywna    DefinicjaNegatywnaType @default(positive)
  aspekt       Aspekt?                @relation("Definicja_aspekt", fields: [aspektId], references: [id])
  aspektId     String?                @map("aspekt")
  aktualizacja DateTime?              @default(now()) @updatedAt

  @@index([aspektId])
}

model Aspekt {
  id            String       @id @default(cuid())
  nazwa         String       @default("")
  definicje     Definicja[]  @relation("Definicja_aspekt")
  kompetencja   Kompetencja? @relation("Aspekt_kompetencja", fields: [kompetencjaId], references: [id])
  kompetencjaId String?      @map("kompetencja")

  @@index([kompetencjaId])
}

model Kompetencja {
  id             String   @id @default(cuid())
  nazwa          String   @default("")
  metodyka       String?  @default("N/A")
  aspekty        Aspekt[] @relation("Aspekt_kompetencja")
  logo_id        String?
  logo_filesize  Int?
  logo_width     Int?
  logo_height    Int?
  logo_extension String?
}

enum DefinicjaNegatywnaType {
  negative
  positive
}
