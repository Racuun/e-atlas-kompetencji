datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  createdAt DateTime? @default(now())
}

model Definicja {
  id                    String   @id @default(cuid())
  opis                  String   @default("")
  poziom                Int?
  negatywna             Boolean  @default(false)
  aspekt                Aspekt?  @relation("Definicja_aspekt", fields: [aspektId], references: [id])
  aspektId              String?  @map("aspekt")
  from_Aspekt_definicje Aspekt[] @relation("Aspekt_definicje")

  @@index([aspektId])
}

model Aspekt {
  id                       String        @id @default(cuid())
  nazwa                    String        @default("")
  definicje                Definicja[]   @relation("Aspekt_definicje")
  kompetencja              Kompetencja?  @relation("Aspekt_kompetencja", fields: [kompetencjaId], references: [id])
  kompetencjaId            String?       @map("kompetencja")
  from_Definicja_aspekt    Definicja[]   @relation("Definicja_aspekt")
  from_Kompetencja_aspekty Kompetencja[] @relation("Kompetencja_aspekty")

  @@index([kompetencjaId])
}

model Kompetencja {
  id                      String   @id @default(cuid())
  nazwa                   String   @default("")
  metodyka                String?  @default("N/A")
  aspekty                 Aspekt[] @relation("Kompetencja_aspekty")
  from_Aspekt_kompetencja Aspekt[] @relation("Aspekt_kompetencja")
}
